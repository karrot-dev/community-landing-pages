<style>
h1 {
  text-align: center;
}

body {
  font-family: Arial;
}

.team-grid {
  display: grid;
  grid-gap: 30px;
  grid-template-columns: repeat(auto-fit, 300px);
  justify-items: center;
  justify-content: center;
}

.team-member {
  width: 260px;
  box-shadow: 3px 3px 10px -2px #e9e9e9;;
  background-color: white;
  padding: 20px;
  border-radius: 2px;
}

.team-member * {
  color: #222;
  text-decoration: none;
}

.team-member .user-bio {
  font-size: 12px;
  line-height: 1.5em;
}

.team-bio {
  max-width: 300px;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 30px;
}

.team-bio .emoji {
  height: 14px;
}
</style>

<h1>People</h1>

<% karrot_team = Group.where(name: 'KarrotTeam').first %>

<div class="team-bio">
  <%= karrot_team.bio_cooked.html_safe %>
</div>

<div class="team-grid">
  <% karrot_team.users.order("random() ASC").each do |user| %>
    <div class="team-member">
      <%= user_profile(user, avatar_size: 120, add_bio: true) %>
    </div>
  <% end %>
</div>
